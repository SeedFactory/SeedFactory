!!! 5
%html
  %head
    %meta{ content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0',  name: 'viewport' }
    %title Seed Factory
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button{ type: "button", class: "navbar-toggle", data: { toggle: "collapse", target: "#navbar-collapse" } }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Seed Factory', root_path, class: 'navbar-brand'
        #navbar-collapse.collapse.navbar-collapse
          %ul.nav.navbar-nav
            = nav_link 'Products', products_path
            - if has_role? :administrator
              %li.dropdown
                = nav_dropdown 'Admin' do
                  = nav_link 'Brands', brands_path
                  = nav_link 'Categories', categories_path
                  = nav_link 'Ingredients', ingredients_path
                  = nav_link 'Item Classes', item_classes_path
                  = nav_link 'Markup Tables', markups_path
                  = nav_link 'Package Elements', package_elements_path
                  = nav_link 'Users', users_path
            = nav_link 'Contact Us', contact_path
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              = nav_dropdown current_user.name do
                = nav_link 'Logout', logout_path
            - else
              = nav_link 'Login', login_path
    .container
      = yield