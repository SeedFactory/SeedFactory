%html
  %head
    %title Seed Factory
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

      .collapse.navbar-collapse.navbar-ex1-collapse
        %ul.nav.navbar-nav
          = link_to 'Seed Factory', root_path, class: 'navbar-brand'
          = nav_link 'Products', products_path
          = nav_link 'Brands', brands_path
          = nav_link 'Categories', categories_path


          %li.dropdown
            = nav_dropdown 'Admin' do
              = nav_link 'Ingredients', ingredients_path
              = nav_link 'Item Classes', item_classes_path
              = nav_link 'Markup Tables', markups_path
              = nav_link 'Package Elements', package_elements_path
        %ul.nav.navbar-nav.navbar-right
          - if current_user
            = nav_dropdown current_user.name do
              = nav_link 'Logout', logout_path
          - else
            = nav_link 'Login', login_path
    .container
      = yield
      / /.navbar-collapse