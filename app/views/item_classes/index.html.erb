<h1>Item Classes</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_classes.each do |item_class| %>
      <tr>
        <td><%= item_class.name %></td>
        <td><%= link_to 'Show', item_class %></td>
        <td><%= link_to 'Edit', edit_item_class_path(item_class) %></td>
        <td><%= link_to 'Destroy', item_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item class', new_item_class_path %>
