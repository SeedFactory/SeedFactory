<h1>Products</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Code prefix</th>
      <th>Code suffix</th>
      <th>Code</th>
      <th>Name</th>
      <th>Weight</th>
      <th>Items per case</th>
      <th>Type</th>
      <th>Category</th>
      <th>Markup</th>
      <th>Item class</th>
      <th>Upc</th>
      <th>Pallet bag count</th>
      <th>Pallet case count</th>
      <th>Pallet size</th>
      <th>Pallet weight</th>
      <th>Gaylord</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Production line</th>
      <th>Screen size top</th>
      <th>Screen size bottom</th>
      <th>Catalog page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code_prefix %></td>
        <td><%= product.code_suffix %></td>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.weight %></td>
        <td><%= product.items_per_case %></td>
        <td><%= product.type %></td>
        <td><%= product.category %></td>
        <td><%= product.markup %></td>
        <td><%= product.item_class %></td>
        <td><%= product.upc %></td>
        <td><%= product.pallet_bag_count %></td>
        <td><%= product.pallet_case_count %></td>
        <td><%= product.pallet_size %></td>
        <td><%= product.pallet_weight %></td>
        <td><%= product.gaylord %></td>
        <td><%= product.description %></td>
        <td><%= product.brand %></td>
        <td><%= product.production_line %></td>
        <td><%= product.screen_size_top %></td>
        <td><%= product.screen_size_bottom %></td>
        <td><%= product.catalog_page %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

