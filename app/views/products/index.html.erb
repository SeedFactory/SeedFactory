<h1>Products</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Category</th>
      <th>Item class</th>
      <th>Upc</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Catalog page</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code_concat %></td>
        <td><%= link_to product.name, product %></td>
        <td><%= product.category.try(:name) %></td>
        <td><%= product.item_class.try(:name) %></td>
        <td><%= product.upc %></td>
        <td><%= product.description %></td>
        <td><%= product.brand %></td>
        <td><%= product.catalog_page %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
